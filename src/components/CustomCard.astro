---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'a'> {
	title: string;
	subTitle?: string;
}

const { title, subTitle, href, ...attributes } = Astro.props;
---

<div class="custom-card">
	<div class="card-header">
		<a href={href} class="title-link" {...attributes}>
			<span class="title" set:html={title} />
		</a>
        {subTitle && <span class="card-subtitle" set:html={subTitle} />}

        {href && (
            <button class="copy-btn" data-href={href} aria-label="Copy link to clipboard">
                <span class="icon-default">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path><path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path></svg>
                </span>
                <span class="icon-copied">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
                </span>
            </button>
        )}
	</div>
	<div class="card-body">
		<slot />
	</div>
</div>

<style>
    .custom-card {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        
        /* Initial State */
        border: 1px solid var(--sl-color-gray-5);
        border-radius: 0.5rem;
        padding: 1rem;
        background-color: var(--sl-color-black);
        height: 100%;
        position: relative;
        z-index: 1;
        
        /* Initial Shadow */
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        
        transition: box-shadow 0.3s ease-out, border-color 0.3s ease-out;
    }

    .custom-card:hover {
        /* Directional Borders */
        border-top-color: transparent;
        border-left-color: transparent;
        border-bottom-color: transparent;
        border-right-color: transparent;

        box-shadow: 0 0 40px -5px rgba(0, 0, 0, 0.5);
        
        z-index: 10;
    }

    .card-header {
        display: flex;
        align-items: center;
        gap: 0.5rem; 
        flex-wrap: wrap; 
    }

    .title-link {
        text-decoration: none;
        line-height: var(--sl-line-height-headings);
        color: var(--sl-color-white);
        font-weight: 600;
        font-size: var(--sl-text-lg);
    }

    .title-link[href] {
        color: var(--sl-color-text-accent);
    }

    .title-link:hover {
        text-decoration: underline;
    }

    .card-subtitle {
        color: var(--sl-color-gray-3);
        font-size: var(--sl-text-lg);
        font-weight: normal;
        font-style: italic; 
    }

    .copy-btn {
        background: transparent;
        border: none;
        padding: 0.25rem;
        cursor: pointer;
        color: var(--sl-color-gray-4);
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 0.25rem;
        transition: color 0.2s, background-color 0.2s;
        flex-shrink: 0;
        z-index: 2;
    }

    .copy-btn:hover {
        color: var(--sl-color-white);
        background-color: var(--sl-color-gray-6);
    }

    .copy-btn.copied {
        color: var(--sl-color-green);
    }

    .icon-copied { display: none; }
    .copy-btn.copied .icon-default { display: none; }
    .copy-btn.copied .icon-copied { display: block; }

    .card-body {
        color: var(--sl-color-gray-3);
        line-height: 1.5;
        display: flex;
        flex-direction: column;
        flex-grow: 1;
        gap: 0.75rem; 
    }

    .card-body > :global(*) {
        margin-top: 0 !important;
        margin-bottom: 0 !important;
    }

    .card-body > :global(.aside) {
        margin-top: auto !important;
    }
</style>

<script>
    const setupCopyButtons = () => {
        const copyButtons = document.querySelectorAll('.copy-btn');
        copyButtons.forEach((btn) => {
            const button = btn as HTMLButtonElement;
            const newBtn = button.cloneNode(true) as HTMLButtonElement;
            button.parentNode?.replaceChild(newBtn, button);

            newBtn.addEventListener('click', async () => {
                const href = newBtn.dataset.href;
                if (!href) return;
                try {
                    const textToCopy = new URL(href, window.location.origin).href;
                    await navigator.clipboard.writeText(textToCopy);
                    newBtn.classList.add('copied');
                    setTimeout(() => newBtn.classList.remove('copied'), 2000);
                } catch (err) {
                    console.error('Failed to copy: ', err);
                }
            });
        });
    };

    setupCopyButtons();
    document.addEventListener('astro:page-load', setupCopyButtons);
</script>